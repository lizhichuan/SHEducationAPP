<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/halftransparent"
    android:gravity="bottom"
    android:orientation="vertical">


    <TextView
        style="@style/my_tv_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="分享给小伙伴" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/tv_qq"
            style="@style/my_tv_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/icon_qq"
            android:gravity="center"
            android:text="QQ好友"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_qzone"
            style="@style/my_tv_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/icon_qzone"
            android:gravity="center"
            android:text="QQ空间"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_weichat"
            style="@style/my_tv_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/icon_weichat_friends"
            android:gravity="center"
            android:text="微信"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_circle"
            style="@style/my_tv_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableTop="@mipmap/icon_weichat_circle"
            android:gravity="center"
            android:text="朋友圈"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>
