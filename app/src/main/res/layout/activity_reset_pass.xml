<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_backgroud"
    android:orientation="vertical"
    tools:context="com.shaohua.sheducation.activity.ForgetPassActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">


        <EditText
            android:id="@+id/et_pass"
            style="@style/my_edit_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入新密码"
            android:inputType="textPassword" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_marginLeft="10dp"
            android:background="@color/line_color" />


        <EditText
            android:id="@+id/et_pass_confirm"
            style="@style/my_edit_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请重新输入新密码"
            android:inputType="textPassword" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_confirm"
        style="@style/tv_btn_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="确定" />
</LinearLayout>

